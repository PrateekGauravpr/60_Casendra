<%- layout("layout22/boilerplate.ejs") -%>

<style> 
.manual{ padding-left: 450px;
    width: 2700px;
    height: 700px;

}


</style>

<body class="bg-light">

    <div class="container mt-5 " >
        <h3 class="text-center mb-4">Add Your Task</h3>
<div class="manual">
        <form method="post" action="/task" class="p-4 border rounded shadow-sm  cont">
            <!-- Task Name -->
            <div class="mb-3">
                <h4>Task Name</h4>
                <input type="text" placeholder="Task Name" name="Tname" class="form-control" required>
            </div>

            <!-- Task Description -->
            <div class="mb-3">
                <h4>Description</h4>
                <textarea name="Tdesc" cols="30" rows="5" placeholder="Describe the task" class="form-control" required></textarea>
            </div>

            <!-- Task Priority -->
            <div class="mb-3 form-check">
                <input type="checkbox" name="Priority0" class="form-check-input" id="priorityCheck">
                <label class="form-check-label" for="priorityCheck">High Priority</label>
            </div>

            <!-- Task Type -->
            <div class="mb-3">
                <h4>Select Task Type</h4>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="Personal" id="personalTask">
                    <label class="form-check-label" for="personalTask">Personal</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="Official" id="officialTask">
                    <label class="form-check-label" for="officialTask">Official</label>
                </div>
            </div>

            <!-- Assigned To -->
            <div class="mb-3">
                <h4>Assigned To</h4>
                <input type="text" name="Tassign" placeholder="Assignee" class="form-control" required>
            </div>
             <!-- TAT -->
             <div class="mb-3">
                <h4>TAT</h4>
                <input type="date" name="tat"  class="form-control" required>
            </div>

            <!-- Submit Button -->
            <div class="text-center">
                <button type="submit" class="btn btn-primary mt-3">Submit Task</button>
            </div>
        </form>
    </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
