            <a href="/home">
                <i class="fa-solid fa-robot fa-2x" style="color: rgb(84, 84, 126);"></i>
            </a>
            <a class="navbar-brand" href="/home" style="font-size: 16px; font-weight: 500;">Home</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/task" style="font-size: 16px; font-weight: 500;">Add Task</a>
